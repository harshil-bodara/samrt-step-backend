<% layout('../layouts/admin') -%>
<div class="row">
  <div class="col-12">
    <div class="page-title-box">
      <div class="page-title-left">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
          <li class="breadcrumb-item">
            <a href="/admin/descipline">Desciplines</a>
          </li>
          <li class="breadcrumb-item active">
            <a href="javascript: void(0);">Add</a>
          </li>
        </ol>
      </div>
    </div>
  </div>
  <div class="col-sm-12">
    <div class="page-title-box">
      <h4 class="page-title">Add Descipline</h4>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <form
          method="post"
          id="addDesciplineForm"
          enctype="multipart/form-data"
        >
          <div class="row">
            <div class="col-lg-12">
              <div class="form-group mb-3">
                <label>Title <span class="text-danger">*</span></label>
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  placeholder="Title"
                  autocomplete="off"
                />
                <div class="text-danger name"></div>
              </div>
            </div>

            <div class="col-lg-12">
              <div class="form-group mb-3">
                <label>Icon</label>
                <input
                  type="file"
                  name="icon"
                  class="form-control"
                  placeholder="Icon"
                />
                <div class="text-danger icon"></div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12 text-right">
              <div class="form-group mb-3 text-right">
                <button
                  id="submitaddDesciplineForm"
                  type="submit"
                  class="btn btn-primary waves-effect waves-light"
                >
                  Submit
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $(".categoryManager").addClass("active");
</script>
<script>
  $(document).ready(function () {
    $("#addDesciplineForm").validate({
      errorPlacement: function (error, element) {
        const name = $(element).attr("name");
        error.appendTo($("." + name));
      },
      submitHandler: function (form) {
        $("#submitaddDesciplineForm").attr("disabled", "disabled");
        form.submit();
      },
      rules: {
        name: {
          required: true,
          minlength: 3,
          maxlength: 30,
        },
        icon: {
          required: true,
          accept: "image/jpeg, image/png",
        },
      },
      messages: "",
    });
  });
  $(".categoryManager").addClass("active");
</script>
