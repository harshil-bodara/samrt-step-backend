﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>
        <%= siteTitle %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="<%= siteUrl %>/favicon-32x32.png">
    <link href="<%= siteUrl %>/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="<%= siteUrl %>/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="<%= siteUrl %>/css/app.min.css" rel="stylesheet" type="text/css">
    <script src="<%= siteUrl %>/js/jquery.min.js"></script>
    <script src="<%= siteUrl %>/js/vendor.min.js"></script>
</head>

<body class="authentication-bg authentication-bg-pattern">
    <div class="account-pages mt-5 mb-5">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="card-box">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="page-title-box text-center">
                                    <h4 class="page-title">
                                        <%= page.title || '' %>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <%- page.description  || '' %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <a href="/pages" class="btn btn-primary btn-md">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
