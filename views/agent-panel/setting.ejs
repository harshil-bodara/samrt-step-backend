<% layout('layouts/admin') -%>

    <div class="row margin">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-left">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active">
                            <a href="javascript: void(0);">Settings</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="page-title-box">
                <h4 class="page-title">Settings</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form id="settingsForm" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4 class="header-title">App Settings</h4>
                                <p class="sub-header">app settings</p>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label>Android app version <span
                                                class="text-danger">*</span></label>
                                    <input type="text" name="androidAppVersion"
                                           value="<%= settings.androidAppVersion || '' %>" class="form-control"
                                           placeholder="Android app version" autocomplete="off">
                                    <div class="text-danger androidAppVersion"></div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label>Android app force update<span
                                                class="text-danger">*</span></label>
                                    <select class="form-control" name="androidForceUpdate" autocomplete="off">
                                        <option <%= settings.androidForceUpdate ? 'selected="selected"' : '' %> value=true>
                                            Enable
                                        </option>
                                        <option <%= !settings.androidForceUpdate ? 'selected="selected"' : '' %>
                                                value=false>
                                            Disable
                                        </option>
                                    </select>
                                    <div class="text-danger androidForceUpdate"></div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label>iOS app version <span class="text-danger">*</span></label>
                                    <input type="text" name="iosAppVersion" value="<%= settings.iosAppVersion || '' %>"
                                           class="form-control" placeholder="iOS app version" autocomplete="off">
                                    <div class="text-danger iosAppVersion"></div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label>iOS app force update <span
                                                class="text-danger">*</span></label>
                                    <select class="form-control" name="iosForceUpdate" autocomplete="off">
                                        <option <%= settings.iosForceUpdate ? 'selected="selected"' : '' %> value=true>
                                            Enable
                                        </option>
                                        <option <%= !settings.iosForceUpdate ? 'selected="selected"' : '' %> value=false>
                                            Disable
                                        </option>
                                    </select>
                                    <div class="text-danger iosForceUpdate"></div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label>Maintenance <span class="text-danger">*</span></label>
                                    <select class="form-control" name="maintenance" autocomplete="off">
                                        <option <%= settings.maintenance ? 'selected="selected"' : '' %> value=true>Enable
                                        </option>
                                        <option <%= !settings.maintenance ? 'selected="selected"' : '' %> value=false>
                                            Disable
                                        </option>
                                    </select>
                                    <div class="text-danger maintenance"></div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label for="numberOfCoins" class=" col-form-label">Number of coins spent for each spin</label>
                                
                            
                                    <input type="number" name="numberOfCoins" value="<%= settings.spinSetting[0].numberOfCoins || 0 %>" class="form-control"
                                        id="numberOfCoins" placeholder="Enter number of coins">
                                    <div class="text-danger numberOfCoins"></div>
                              
                            </div>
                            </div>
                            <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label for="jackpotChances" class=" col-form-label">Number of spins for 1 jackpot game chance</label>
                                
                                    <input type="number" name="jackpotChances" value="<%= settings.spinSetting[0].jackpotChances || 0 %>"class="form-control"
                                        id="jackpotChances" placeholder="Enter number of spins to get chance for jackpot">
                                <div class="text-danger jackpotChances"></div>
                            
                               
                            </div>
                            </div>
                            <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label for="minimumWithdrawalAmount" class=" col-form-label">Minimum wallet amount for withdrawal</label>
                                <div class=" input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">$</span>
                                    </div>
                                    <input type="number" name="minimumWithdrawalAmount" value="<%= settings.spinSetting[0].minimumWithdrawalAmount || 0 %>"
                                        class="form-control" id="minimumWithdrawalAmount" placeholder="Enter Minimum wallet amount for withdrawal">
                                        
                                </div>
                                <div class="text-danger minimumWithdrawalAmount"></div>
                            </div>
                            </div>
                            <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label for="joiningBonus" class=" col-form-label">Coins added as joining bonus</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class='fas fa-coins'></i></span>
                                    </div>
                                    <input type="number" name="joiningBonus" value="<%= settings.spinSetting[0].joiningBonus || 0 %>" class="form-control"
                                        id="joiningBonus" placeholder="Enter number of coins as joining bonus ">
                                        <div class="text-danger joiningBonus"></div>
                                </div>
                              </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label for="referralBonus" class=" col-form-label">Referral bonus coin</label>
                                    <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class='fas fa-coins'></i></span>
                                    </div>
                                    <input type="number" name="referralBonus" value="<%= settings.spinSetting[0].referralBonus || 0 %>"
                                        class="form-control" id="referralBonus" placeholder="Enter referral Bonus ">
                                    </div>
                                        <div class="text-danger referralBonus"></div>
                                </div>
                            
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group mb-3">
                                    <label for="applyProbability" class=" col-form-label">Apply on Probability</label>
                                    <div class=" input-group">
                                   
                                    <input type="number" name="applyProbability" value="<%= settings.spinSetting[0].applyProbability || 0 %>"
                                        class="form-control" id="applyProbability" placeholder="Enter number of coins as joining bonus ">
                                    <div class="text-danger applyProbability"></div>
                                </div>
                            </div>
                            </div>
                            
                        </div>
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="form-group mb-3 text-right">
                                <button id="submitSettingsForm" type="submit"
                                    class="btn btn-primary waves-effect
                                    waves-light">Submit
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const ADMIN_SETTINGS_FORM = <%- JSON.stringify(DM('ADMIN_SETTINGS_FORM')) %>;
        $('#settingsForm').validate({
            errorPlacement: function(error, element) {
                const name = $(element).attr('name');
                error.appendTo($('.' + name));
            },
            submitHandler: function(form) {
                $('#submitSettingsForm').attr('disabled', 'disabled');
                form.submit();
            },
            rules: {
                androidAppVersion: {
                    required: true,
                    pattern: /^[\d]+\.[\d]+\.[\d]+$/,
                },
                androidForceUpdate: {
                    required: true,
                },
                iosAppVersion: {
                    required: true,
                    pattern: /^[\d]+\.[\d]+\.[\d]+$/,
                },
                iosForceUpdate: {
                    required: true,
                },
                maintenance: {
                    required: true,
                },
                numberOfCoins: {
                    required: true,
                    number: true,
                    min: 0,

                },
                jackpotChances: {
                    required: true,
                    number: true,
                    min: 0,

                },
                minimumWithdrawalAmount: {
                    required: true,
                    number: true,
                    min: 0,

                },
                joiningBonus: {
                    required: true,
                    number: true,
                    min: 0,

                },
                referralBonus:{
                    required: true,
                    number: true,
                    min: 0,
                },
                applyProbability:{
                    required: true,
                    number: true,
                    min: 0,
                },
            },
            messages: ADMIN_SETTINGS_FORM,
        });
    });
</script>
